<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bcepnez.nearbydormitory.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/Button1"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/map"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:text="Google Map"
                android:textColor="#FF8800"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row1"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/Button2"
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/student_dormitory" />

            <Button
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:text="All Dormitory"
                android:textColor="#FF8800"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row2"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/Button3"
                android:layout_width="90dp"
                android:layout_height="86dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/star" />

            <Button
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:text="Rate"
                android:textColor="#FF8800"
                android:textSize="20dp" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row3"
            android:background="@null"
            android:id="@+id/adddorm"
            android:text="Add Dormitory Location"></Button>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/adddorm"
            android:scaleType="centerInside"
            android:src="@drawable/powered_by2" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
